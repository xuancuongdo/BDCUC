@page
@model CanhBaoApp.Pages.Login
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout_Login";
    string message = "";
    if (ViewData["ErrorMessage"] != null) message = ViewData["ErrorMessage"].ToString();
}



<div style="margin: auto; max-width: 500px;margin-top:100px">

    <div class="row">
        <div class="col">
            <div class="card shadow">

                <div class="card-body">
                    <h1 class="login-title">@ViewData["Title"]</h1>
                    @if (message.Length > 0)
                    {
                        <div class="row">
                            <div class="col">
                                <div class="alert alert-warning d-flex align-items-center" role="alert">
                                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img"
                                    aria-label="Warning:">
                                        <use xlink:href="#exclamation-triangle-fill" />
                                    </svg>
                                    <div>
                                        @message
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="user.Username"></label>
                            <input class="form-control" asp-for="user.Username" placeholder="Tên đăng nhập">
                            <span asp-validation-for="user.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="user.Password"></label>
                            <input type="password" class="form-control" asp-for="user.Password" placeholder="Mật khẩu">
                            <span asp-validation-for="user.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Ghi nhớ tên và mật khẩu</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
