{
    "compilerOptions": {
        "outDir": "js",

        "removeComments": true,
        "module": "amd",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "tsx",
        "lib": ["es6", "dom", "es2017"],
        "target": "es6",
        "experimentalDecorators": true,
        "preserveConstEnums": true,

        "importHelpers": true,
        "moduleResolution": "node",
        // "noUnusedLocals": true
    },
    "include": [
        "./app/*"
, "app/models/MovingChartModel.ts"    ],
    "exclude": [
        "css",
        "fonts",
        "js",
        "img",
        "node_modules"
    ]
}